<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHome">

    <TextView
        android:id="@+id/textViewPetCare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="PetCare"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePetCare"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPetCare"
        app:srcCompat="@mipmap/ic_pict1_foreground" />

    <ImageView
        android:id="@+id/imageViewKebutuhan"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imagePetCare"
        app:layout_constraintTop_toBottomOf="@+id/imagePetCare"
        app:srcCompat="@mipmap/ic_pict5_foreground" />

    <ImageView
        android:id="@+id/imageViewLayanan"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/imagePetCare"
        app:layout_constraintTop_toBottomOf="@+id/imagePetCare"
        app:srcCompat="@mipmap/ic_pict10_foreground" />

    <Button
        android:id="@+id/buttonKebutuhan"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:onClick="pindahKebutuhan"
        android:text="Kebutuhan"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imageViewKebutuhan"
        app:layout_constraintStart_toStartOf="@+id/imageViewKebutuhan"
        app:layout_constraintTop_toBottomOf="@+id/imageViewKebutuhan" />

    <Button
        android:id="@+id/buttonLayanan"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:onClick="pindahLayanan"
        android:text="Layanan"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLayanan"
        app:layout_constraintStart_toStartOf="@+id/imageViewLayanan"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLayanan" />

    <TextView
        android:id="@+id/textViewPetCare2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Solusi kebutuhan dan layanan hewan peliharaan anda"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPetCare"
        app:layout_constraintTop_toBottomOf="@+id/textViewPetCare" />

</androidx.constraintlayout.widget.ConstraintLayout>