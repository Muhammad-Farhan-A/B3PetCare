<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEditProfil">

    <TextView
        android:id="@+id/textViewEditProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="Edit Profil User"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEditProfil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Silahkan isi data profil yang ingin diubah"
        app:layout_constraintStart_toStartOf="@+id/textViewEditProfil"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditProfil" />

    <TextView
        android:id="@+id/textViewEditUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Username :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewEditProfil2"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditProfil2" />

    <EditText
        android:id="@+id/editTextEditUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="username pengguna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditUsername" />

    <EditText
        android:id="@+id/editTextEditPhone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_phone_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="phone"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="081234567890"
        app:layout_constraintEnd_toEndOf="@+id/editTextEditUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextEditUsername"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditPhone" />

    <TextView
        android:id="@+id/textViewEditPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="No. Telpon :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewEditUsername"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditUsername" />

    <TextView
        android:id="@+id/textViewEditAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Alamat :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewEditPhone"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditPhone" />

    <EditText
        android:id="@+id/editTextEditAlamat"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_home_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="alamat rumah pengguna"
        app:layout_constraintEnd_toEndOf="@+id/editTextEditPhone"
        app:layout_constraintStart_toStartOf="@+id/editTextEditPhone"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditAlamat" />

    <Button
        android:id="@+id/buttonSimpanProfil"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        android:text="Simpan"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editTextEditAlamat"
        app:layout_constraintStart_toStartOf="@+id/editTextEditAlamat"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditAlamat" />

</androidx.constraintlayout.widget.ConstraintLayout>